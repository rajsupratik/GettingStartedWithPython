# Pattern 1
n = 5
for i in range(n):
    for j in range(i + 1):
        print("*", end=" ")
    print()

#Q5 Pattern 2
n = 5
for i in range(1, n + 1):
    for j in range(1, i + 1):
        print(j, end=" ")
    print()

# Q5.Pattern 3
n = 5
for i in range(1, n + 1):
    for j in range(n - i):
        print(" ", end=" ")
    for j in range(i, 0, -1):
        print(j, end=" ")
    for j in range(2, i + 1):
        print(j, end=" ")
    print()
